 <% if @book.errors %>
   <ul>
<% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
   </ul>
  <% end %>

 <div class="container">
    <div class="row">
       <div class="col-xs-4">
         <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", format: "no_image.jpg" %>

       <h5>name</h5>
    <%= @user.name %>
    <h5>introduction</h5>
    <%= @user.introduction %>
    <%= link_to"", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

    <%= form_with model:@book, url:"/books", local:true do |f| %>

        <h2>New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title,class: "col-xs-12" %>

        <h4>Opinion</h4>
        <%= f.text_field :body,class: "col-xs-12" %>
        <nav>

        <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
        </nav>
        <% end %>
       </div>

    <div class= "col-xs-8">
    <h2>Book detail</h2>
    <table class="table table-striped">
      <% @books.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
        <th><%= user.name %><th>
        <th><%= link_to"Show",user_path(user.id) %></th>
      </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>