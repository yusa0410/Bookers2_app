<%# trの上に書く %>
	<table class="table">
	<% book.book_comments.each do |book_comment|%>
<tr>
	<td>
		<%= link_to attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg"), user_path(book_comment.user) %>
		<%= book_comment.user.name %>
	</td>
	<td>
		<%= book_comment.comment %>
	</td>

	<td>
		<% if book_comment.user_id == current_user.id %>
		<%= link_to "Delete", book_book_comment_path(book,book_comment.id), method: :delete, class: "btn-sm btn-danger",remote: true %>
		<br>
		<% end %>
	</td>
</tr>
 <% end %>

 </table>