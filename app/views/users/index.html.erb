 <div class="container px-5 px-sm-0">
    <div class="row">
       <div class="col-md-3">

       <%= render 'users/list', user: @user %>

    <%= form_with model:@book, url:"/books", local:true do |f| %>

        <h2>New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title,class: "col-xs-12" %>

        <h4>Opinion</h4>
        <%= f.text_field :body,class: "col-xs-12" %>
        <nav>

        <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
        </nav>
        <% end %>
       </div>


  <div class= "col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table table-hover">

      <tr>
      <th></th>
      <th>Image</th>
      <th>Name</th>
      <th colspan="3"></th>
      <th>follows</th>
			<th>followers</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
        <th><%= user.name %><th>
        <td><%= user.followings.count %></td>
				<td><%= user.reverse_of_relationships.count %></td>
				<td><%= render 'relationships/follow_button', user: user %></td>
        <th><%= link_to"Show",user_path(user.id) %></th>
      </tr>
      <% end %>
    </table>
    </div>
    </div>
    </div>