  <div class="col-xs-9">
<h2>Follower Users</h2>または<h2>Follow Users</h2>
<% if @users.exists? %>
 <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>follows</th>
      <th>followers</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @followings.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, size:'100x100', fallback: "no-image-mini.jpg") %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
</div>