<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <body class="header">
    <header class="navbar navbar-expand-lg navbar-light bg-light bg-dark">
      <div class="container">
        <nav class="navbar navbar-dark bg-dark">
            <a class="navbar-brand" href="/">
              <span>Bookers</span>
            </a>
        </nav>
        <nav>
         <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li><%= link_to "Home", user_path(current_user.id),class:"fas fa-home nav-link text-light" %></li>
            <li><%= link_to "Users", "/users",class:"fas fa-users nav-link text-light" %></li>
            <li><%= link_to "Books", "/books",class:"fas fa-book-open nav-link text-light" %></li>
            <li><%= link_to "logout", destroy_user_session_path,class:"fas fa-sign-out-alt nav-link text-light",method: :delete %></li>

          <% else %>
            <li><%= link_to"Home", root_path,class:"fas fa-home nav-link text-light" %></li>
            <li><%= link_to"About", home_about_path,class:"fas fa-link nav-link text-light" %></li>
            <li><%= link_to"Sign up", "/users/sign_up",class:"fas fa-user-plus nav-link text-light" %></li>
            <li><%= link_to"login", "/users/sign_in",  class:"fas fa-sign-in-alt nav-link text-light" %></li>
          <% end %>
        </ul>
        </nav>
      </div>
    </header>

    <div class="body">
      <p class="notice"><%= notice %></p>

      <%= yield %>


        <footer>
          <div class="container mt-5">
            <div class="row">
              <div class='mx-auto'>
                <p>CopyRight Infratop.inc</p>
              </div>
            </div>
          </div>
        </footer>

      </div>
    </div>
  </body>
</html>
